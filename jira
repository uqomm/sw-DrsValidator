#!/bin/bash

# üöÄ Jira Manager Wrapper Script
# Facilita el uso del jira_manager.py desde cualquier directorio del proyecto

# Obtener el directorio del script (ra√≠z del proyecto)
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
JIRA_MANAGER="${SCRIPT_DIR}/jira_manager.py"

# Verificar que el script existe
if [ ! -f "$JIRA_MANAGER" ]; then
    echo "‚ùå Error: jira_manager.py no encontrado en ${JIRA_MANAGER}"
    exit 1
fi

# Ejecutar el script de Python con todos los argumentos pasados
python3 "$JIRA_MANAGER" "$@"