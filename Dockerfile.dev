# Development Dockerfile for DRS Validation Tool

FROM python:3.11-slim

LABEL maintainer="DRS Monitoring Team"
LABEL description="DRS Validation Tool - Development Environment"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    iputils-ping \
    telnet \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy and install requirements
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Set environment for development
ENV PYTHONPATH=/app
ENV FLASK_ENV=development
ENV LOG_LEVEL=debug

# Expose ports for the app and debugger
EXPOSE 8080
EXPOSE 5678

# Command to run the app with live reload
# The code will be mounted via docker-compose volume
CMD ["uvicorn", "validation_app:app", "--host", "0.0.0.0", "--port", "8080", "--reload", "--reload-dir", "/app"]